[Unit]
Description=Surgical Simulation Platform
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/path/to/surgical-simulation-platform/backend
Environment=PATH=/path/to/surgical-simulation-platform/venv/bin
ExecStart=/path/to/surgical-simulation-platform/venv/bin/gunicorn --config gunicorn.conf.py app:app
Restart=always

[Install]
WantedBy=multi-user.target
